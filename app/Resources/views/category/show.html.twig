{% extends 'base.html.twig' %}

{% block body %}
    <div class="card mb-4" style="margin-top: 10px;">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-4">
                    <img src="{{ asset('uploads/category/' ~ category.image) }}">
                </div>
                <div class="col-lg-8">
                    <h2 class="card-title">
                        {{ category.nom }}
                    </h2>
                    <p class="card-body">
                        {{ category.descriptionLong }}
                    </p>
                </div>
            </div>
        </div>
        <div class="card-footer text-muted">
            <a href="">Ajouter</a>
            <a href="{{ path('category_edit', {'id': category.id}) }}">Modifier</a>
        </div>
    </div>


    <div class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('article_id', {'id': category.id}) }}">Lire des articles relatifs à {{ category.nom }}</a> </li>
    </div>

    <div class="row">
        {% for category in categories %}
        <div class="col-4">
            <div class="card flex-md-row mb-4 box-shadow ">
                <div class="card-body d-flex flex-column align-items-start">
                    <h3 class="mb-0">{{ category.nom }}</h3>
                    <p class="card-text mb-auto">{{ category.descriptionShort|length > 40 ? category.descriptionShort|slice(0, 40) ~ '...' : category.descriptionShort  }}</p>
                    <a href="{{ path('category_id', {'id': category.id}) }}">Accéder</a>
                </div>
            </div>
        </div>
        {% endfor %}

    </div>


{% endblock %}