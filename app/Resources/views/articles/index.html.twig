{% extends 'base.html.twig' %}

{% block body %}

    <div class="row" style="margin-top: 10px;">
        <div class="col-md-8">
            {% for article in articles %}
                <div class="card- mb-4">
                    <img class="card-img-top" src="" width="750px" height="300px" alt="card image">
                    <div class="card-body">
                        <h2 class="card-title">{{ article.titre }}</h2>
                        <p class="card-text">{{ article.description }}</p>
                        <a href="{{ path('article_id', {'id': article.id}) }}" class="btn btn-primary">Lire l'article</a>
                    </div>
                </div>
                {% else %}
                <p>Pas encore d'articles</p>
            {% endfor %}
        </div>
    </div>

{% endblock %}